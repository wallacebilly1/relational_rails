<h1> Create a new player </h1>

<%= form_with url: "/teams/#{@team.id}/players", method: :post, data: {turbo: :false} do |form| %>
  <p> Edit Team: </p>
  <%= form.label :name, "Name:"%> 
  <%= form.text_field :name%> </br>
  <%= form.label :age, "Age:"%> 
  <%= form.text_field :age%> </br>
  Was this player born outside of the US?
  <%= form.radio_button :international, "true"%>
  <%= form.label :international_true, "True"%>
  <%= form.radio_button :international, "false"%>
  <%= form.label :international_false, "False"%></br>
  <%= form.hidden_field :team_id, value: @team.id %>
  <%= form.submit :submit%>
<% end %>